<!DOCTYPE html>
<html>
<head>
  <title>Medblog</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<% flash.each do |key, value| %>
  <p style='<%= key == :alert ? "color: red" : "" %>'>
    <%= value %>
  </p>
<% end -%>

<%= yield %>

</body>
</html>
